<odoo>
    <data>
        <record model="ir.ui.view" id="hoc_ky_chuong_trinh_khung_tree">
            <field name="model">hoc_ky_chuong_trinh_khung</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="hoc_ky"/>
                    <field name="loai_ky"/>
                    <field name="ctk_id"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="hoc_ky_chuong_trinh_khung_form">
            <field name="model">hoc_ky_chuong_trinh_khung</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group col="4">
                            <field name="hoc_ky"/>
                            <field name="loai_ky"/>
                            <field name="ctk_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_hoc_ky_chuong_trinh_khung">
            <field name="name">Quản lý học kỳ-chương trình khung</field>
            <field name="res_model">hoc_ky_chuong_trinh_khung</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>