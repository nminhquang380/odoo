        <record id="create_user_tn_wizard_form" model="ir.ui.view">
            <field name="model">create_user_tn_wizard</field>
            <field name="arch" type="xml">
                <form string="Tạo tài khoản">
                    <sheet>
                        <a>Có </a>
                        <field name="number_of_records"></field>
                        <a> profile được chọn.</a>
                        <p>Tạo tài khoản cho các profile đã chọn?</p>
