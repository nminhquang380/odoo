<odoo>
    <data>

        <record model="ir.ui.view" id="mentor_kanban">
            <field name="model">mentor</field>
            <field name="arch" type="xml">
                <kanban class="o_res_partner_kanban" sample="1">
                    <field name="id"/>
                    <field name="color"/>
                    <field name="display_name"/>
                    <field name="title"/>
                    <field name="email"/>
                    <field name="parent_id"/>
                    <field name="is_company"/>
                    <field name="function"/>
                    <field name="phone"/>
                    <field name="street"/>
                    <field name="street2"/>
                    <field name="zip"/>
                    <field name="city"/>
                    <field name="country_id"/>
                    <field name="mobile"/>
                    <field name="state_id"/>
                    <field name="category_id"/>
                    <field name="image_128"/>
                    <field name="type"/>
                    <field name="name"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban">
                                <t t-if="!record.is_company.raw_value">
                                    <t t-if="record.type.raw_value === 'delivery'" t-set="placeholder" t-value="'/base/static/img/truck.png'"/>
                                    <t t-elif="record.type.raw_value === 'invoice'" t-set="placeholder" t-value="'/base/static/img/money.png'"/>
                                    <t t-else="" t-set="placeholder" t-value="'/base/static/img/avatar_grey.png'"/>
                                    <div class="o_kanban_image_fill_left d-none d-md-block" t-attf-style="background-image:url('#{kanban_image('mentor', 'image_128', record.id.raw_value,  placeholder)}')">
                                        <img class="o_kanban_image_inner_pic" t-if="record.parent_id.raw_value" t-att-alt="record.parent_id.value" t-att-src="kanban_image('mentor', 'image_128', record.parent_id.raw_value)"/>
                                    </div>
                                    <div class="o_kanban_image d-md-none" t-attf-style="background-image:url('#{kanban_image('mentor', 'image_128', record.id.raw_value,  placeholder)}')">
                                        <img class="o_kanban_image_inner_pic" t-if="record.parent_id.raw_value" t-att-alt="record.parent_id.value" t-att-src="kanban_image('mentor', 'image_128', record.parent_id.raw_value)"/>
                                    </div>
                                </t>
                                <t t-else="">
                                    <t t-set="placeholder" t-value="'/base/static/img/company_image.png'"/>
                                    <div class="o_kanban_image_fill_left o_kanban_image_full" t-attf-style="background-image: url(#{kanban_image('res.partner', 'image_128', record.id.raw_value, placeholder)})" role="img"/>
                                </t>
                                <div class="oe_kanban_details d-flex flex-column">
                                    <strong class="o_kanban_record_title oe_partner_heading"><field name="display_name"/></strong>
                                    <div class="o_kanban_tags_section oe_kanban_partner_categories"/>
                                    <ul>
                                        <li t-if="record.parent_id.raw_value and !record.function.raw_value"><field name="parent_id"/></li>
                                        <li t-if="!record.parent_id.raw_value and record.function.raw_value"><field name="function"/></li>
                                        <li t-if="record.parent_id.raw_value and record.function.raw_value"><field name="function"/> at <field name="parent_id"/></li>
                                        <li t-if="record.city.raw_value or record.country_id.raw_value">
                                            <t t-if="record.city.raw_value"><field name="city"/><t t-if="record.country_id.raw_value">, </t></t>
                                            <t t-if="record.country_id.raw_value"><field name="country_id"/></t>
                                        </li>
                                        <li t-if="record.email.raw_value" class="o_text_overflow"><field name="email"/></li>
                                    </ul>
                                    <div class="o_row">
                                        <span class="oe_kanban_partner_links"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="mentor_form" model="ir.ui.view">
            <field name="model">mentor</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_button_box" name="button_box"/>
                        <div class="oe_edit_only" style="font-size:25px" attrs="{'invisible': [('id', '=', False)], }">Chỉnh sửa Cố vẫn học tập</div>
                        <div class="oe_edit_only" style="font-size:25px" attrs="{'invisible': [('id', '!=', False)], }">Tạo mới Cố vẫn học tập</div>
                        <div class="oe_read_only" style="font-size:25px">Cố vấn học tập</div>
                        <group>
                            <group>
                                <field name="name" required="1" placeholder="VD: Nguyễn Văn A"/>
                                <field name="name" required="1" string="Tên tài khoản" placeholder="VD: ngggnv"
                                       invisible="1"/>
                                <field name="email" placeholder="ngggnv@gmail.com" required="1"/>
                                <!-- <field name="password" required="1" password="1"/> -->
                            </group>
                            <group>
                                <field name="anh_dai_dien" widget='image' class="oe_avatar"
                                       options='{"preview_image": "image_128"}'/>
                            </group>
                        </group>
                        <notebook colspan="4">
                            <page name="thong_tin_ca_nhan" string="Thông tin cá nhân">
                                <group>
                                    <group string="Thông tin bản thân">
                                        <field name="ten_goi_khac"/>
                                        <field name="ngay_sinh"/>
                                        <field name="gioi_tinh"/>
                                        <field name="dan_toc"/>
                                        <field name="ton_giao"/>
                                        <field name="so_cmnd" required="1"/>
                                        <field name="ngay_cap"/>
                                        <field name="so_so_bhxh"/>
                                    </group>
                                    <group string="Nơi sinh">
                                        <field name="tinh_tp_ns"/>
                                        <field name="quan_huyen_ns"/>
                                        <field name="phuong_xa_ns"/>
                                        <field name="so_nha_ten_duong_ns"/>
                                    </group>
                                    <group string="Quê quán trên sổ hộ khẩu">
                                        <field name="tinh_tp_hk"/>
                                        <field name="quan_huyen_hk"/>
                                        <field name="phuong_xa_hk"/>
                                        <field name="so_nha_ten_duong_hk"/>
                                    </group>
                                    <group string="Nơi ở hiện nay">
                                        <field name="tinh_tp_no"/>
                                        <field name="quan_huyen_no"/>
                                        <field name="phuong_xa_no"/>
                                        <field name="so_nha_ten_duong_no"/>
                                    </group>
                                </group>
                            </page>
                            <page name="qua_trinh_cong_tac" string="Quá trình công tác">
                                <group col="4">
                                    <field name="ngay_bat_dau"/>
                                    <field name="ngay_ket_thuc"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="mentor_tree">
            <field name="model">mentor</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="image_128" widget="image" string="Ảnh đại diện"/>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="user_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_mentor_danh_sach_mentor">
            <field name="name">Cố vấn học tập</field>
            <field name="res_model">mentor</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>

    </data>
</odoo>